@model IEnumerable<ProjetGestioStock.Models.TblClient>

@{
    ViewData["Title"] = "Index";
}

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>DataTable Jquery</h3>
                <p class="text-subtitle text-muted">
                    Powerful interactive tables with datatables (jQuery
                    required)
                </p>
                <div class="section">
                    <div class="card">
                        <a href="~/Clients/Create" class="btn btn-outline-primary">Nouveau</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Basic Tables start -->
    <section class="section">
        <div class="card">
            <div class="card-header">
                Jquery Datatable
            </div>
            <div class="card-body">
                <table class="table" id="table1">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Postnom</th>
                            <th>City</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomClient)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PrenomClient)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdresseClient)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdClient">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.IdClient">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.IdClient">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </section>
    <!-- Basic Tables end -->
</div>
