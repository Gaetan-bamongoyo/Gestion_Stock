@model IEnumerable<ProjetGestioStock.Models.TblEntre>

@{
    ViewData["Title"] = "Day";
}

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">

    <!-- Basic Tables start -->
    <section class="section">
        <div class="card">
            <div class="card-header">
                Jquery Datatable
            </div>
            <div class="card-body">
                <table class="table" id="table1">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Quantite</th>
                            <th>Prix achat</th>
                            <th>Date expiration</th>
                            <th>Date achat</th>
                            <th>Fournisseur</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Designation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Qte)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pu)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Dateexpiration)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Dateday)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomFournisseur)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </section>
    <!-- Basic Tables end -->
</div>
